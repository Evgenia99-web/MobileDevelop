<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="blockStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorBlockBg</item>
        <item name="android:layout_marginBottom">@dimen/dp16</item>
        <item name="android:layout_marginLeft">@dimen/dp8</item>
        <item name="android:layout_marginRight">@dimen/dp8</item>
        <item name="android:radius">6dp</item>
    </style>
    <style name="headerBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/headBlockH</item>
        <item name="android:paddingTop">@dimen/dp12</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>
    <style name="userName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp20</item>
        <item name="android:layout_marginLeft">@dimen/dp72</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="time">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp20</item>
        <item name="android:layout_marginLeft">@dimen/dp72</item>
        <item name="android:layout_marginTop">@dimen/dp20</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:alpha">0.3</item>
    </style>
    <style name="avatar">
        <item name="android:layout_width">@dimen/headImg</item>
        <item name="android:layout_height">@dimen/headImg</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginRight">@dimen/dp16</item>
    </style>
    <style name="postText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp72</item>
        <item name="android:layout_marginLeft">@dimen/dp16</item>
        <item name="android:layout_marginRight">@dimen/dp16</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/textSize16</item>
    </style>
    <style name="replays">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">@dimen/dp16</item>
        <item name="android:text">@string/replays</item>
        <item name="android:layout_marginTop">146dp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:layout_marginLeft">@dimen/dp16</item>
    </style>
    <style name="cool">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:src">@drawable/ic_cool</item>
        <item name="android:layout_marginTop">142dp</item>
        <item name="android:layout_marginRight">@dimen/dp12</item>
    </style>
    <style name="footerIcon">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
